# export variables

# debug / verbose log options (0 = verbose, 1 = warn, 2 = error)
export _WS_CFG_LOG_ERROR=0
export _WS_CFG_LOG_WARN=1
export _WS_CFG_LOG_VERBOSE=2
export WS_CFG_LOGLEVEL=$_WS_CFG_LOG_WARN

# basic user paths, previously set in .zshrc
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:$PATH"
export PATH="WS_CFG_PATH/bin:$PATH"

# JAVA
if [ -e /Library/Java/JavaVirtualMachines/adoptopenjdk-8.jdk/Contents/Home ]; then
	# Point JAVA_HOME to your OpenJDK 8 
	export JAVA_HOME="/Library/Java/JavaVirtualMachines/adoptopenjdk-8.jdk/Contents/Home"
fi

# android stuff
if [ -e $HOME/Library/Android/sdk ]; then
	# The Android SDKs come from Android Studio and are placed here
	export ANDROID_SDK_ROOT="$HOME/Library/Android/sdk"
	export ANDROID_HOME="$ANDROID_SDK_ROOT"
fi


# extend path
if [ -e /usr/local/bin ]; then
	export PATH="/usr/local/bin:$PATH"
fi
if [ -e $HOME/Workspace/Binaries ]; then
	export PATH="$HOME/Workspace/Binaries:$PATH"
fi
if [ -e $ANDROID_SDK_ROOT/emulator ]; then
	export PATH="$ANDROID_SDK_ROOT/emulator:$PATH"
	export PATH="/Users/tesseract/Library/Android/sdk/platform-tools/platform-tools:$PATH"
fi
if [ -e $HOME/Workspace/Libraries/google-app-engine-python ]; then
	export PATH="$HOME/Workspace/Libraries/google-app-engine-python:$PATH"
fi

# set shell
if [ -n "$SHELL" ]; then
	export DEFAULT_SHELL="$SHELL"
fi
export SHELL=`which zsh`

# vim for non visual editing
export EDITOR="vim"
# define sublime text as default editor
export VISUAL="subl"

# set browser
export BROWSER=/Applications/Firefox.app/Contents/MacOS/firefox
