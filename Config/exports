# export variables

if [ -e $HOME/Workspace/Binaries ]; then
	export PATH="$PATH:$HOME/Workspace/Binaries"
fi

# android stuff
#if [ -e /opt/android-sdk-linux ]; then
#	export ANDROID_HOME=/opt/android-sdk-linux
#	export PATH=$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH
#fi

# set shell
if [ -n "$SHELL" ]; then
	export DEFAULT_SHELL="$SHELL"
fi
export SHELL=`which zsh`

# vim for non visual editing
export EDITOR="vim"
# define sublime text as default editor
export VISUAL="subl"

# set browser
export BROWSER=`which firefox`
