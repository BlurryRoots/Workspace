# export variables

if [ -e $HOME/Workspace/Binaries ]; then
	export PATH="$PATH:$HOME/Workspace/Binaries"
fi

# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
export HISTCONTROL=ignoreboth

# set shell
if [ -n "$SHELL" ]; then
	export DEFAULT_SHELL="$SHELL"
fi


# define sublime text as default editor
if [ -e "/c/Program Files/Sublime Text 3" ]; then
	export PATH="$PATH:/c/Program Files/Sublime Text 3"
fi
export EDITOR="subl"
export VISUAL="subl"


# setup browser
if [ -e "/c/Program Files/Mozilla Firefox" ]; then
	export PATH="$PATH:/c/Program Files/Mozilla Firefox"
fi
export BROWSER="firefox.exe"
