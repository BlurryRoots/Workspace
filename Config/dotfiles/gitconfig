[color]
	diff = auto
	status = auto
	branch = auto

[alias]
	mg = merge --no-ff
	r = remote
	d = diff
	ds = diff --staged
	dc = show --color --pretty=format:%b HEAD^ HEAD
	dt = difftool --no-prompt
	e = config -e
	c = checkout
	cb = checkout -b
	a = add -v
	af = add -vf
	rmc = rm -r --cached
	me = commit
	m = commit -m
	ma = commit --amend
	mar = commit --amend --reset-author
	mam = commit --amend -m
	s = status -bs
	b = branch
	ba = branch -a
	pl = pull
	p = push
	po = push -u origin
	pot = push -u origin --tags
	poa = push -u origin --all
	poat = push -u origin --all --tags
	l  = log --color
	la = log --graph --color --abbrev-commit --all
	laf = log --graph --color --abbrev-commit --all --name-status
	lav = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --all
	hard = reset --hard
	type = cat-file -t
	dump = cat-file
[core]
	editor = subl -a -w
