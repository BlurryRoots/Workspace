# aliases

# nicer ls
alias ll='ls -lh --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias lav='ls -lAh --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias la='ls -1hs --group-directories-first --color=auto -F'
# confirm before overwriting something
alias cp="cp -vip"
alias cp-override="/bin/cp -vp"
alias cp-update="/bin/cp -vp"
# human-readable sizes
alias df='df -h'
# measuring
alias dusch='du -sch'
# show sizes in MB
alias free='free -m'
# remove stuff recursivly
alias rr='rm -r'

# grepping with color
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# shorthand for find here function
alias fh='find_here'

# equal rights !!! xD
alias woman='man'

alias ws='cd $CONFIGURATION_PATH/../'