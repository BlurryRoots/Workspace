# aliases

# open files
alias o='xdg-open'

# nicer ls
alias ll='ls -lh -F'
alias lav='ls -lAh -F'
alias la='ls -1hs -F'
# confirm before overwriting something
alias cp="cp -viRp"
# human-readable sizes
alias df='df -h'
# measuring
alias dusch='du -sch'
# show sizes in MB
alias free='free -m'
# remove stuff recursivly
alias rr='rm -r'

# grepping with color
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias uuidof='blkid'
alias fh='find_here'

alias tor='$HOME/Applications/Tor-Browser/./start-tor-browser'

alias checkout='$HOME/Workspace/Scripts/./checkout.sh'
alias yt-mpv='$HOME/Workspace/Script/./yt-mpv.sh'

# equal rights !!! xD
alias woman='man'
